#!/bin/sh
which cmake
rm -r build
mkdir -p build
echo "CXX: ${CXX:=$(${R_HOME}/bin/R CMD config CXX)}"
echo "R_PACKAGE_DIR: $R_PACKAGE_DIR"
cmake -Hsrc -Bbuild -DCMAKE_BUILD_TYPE=Release -DCMAKE_CXX_COMPILER=$CXX -DCMAKE_INSTALL_PREFIX=$R_PACKAGE_DIR
cmake --build build -- -j2
cmake --build build --target install
